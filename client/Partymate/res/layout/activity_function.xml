<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_blue"
        android:orientation="vertical" >

        <Button
            android:id="@+id/info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="个人信息" />

        <Button
            android:id="@+id/my_party_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="我的派对" />

        <Button
            android:id="@+id/create_party_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="创建派对" />

        <Button
            android:id="@+id/enter_party_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="加入派对" />

        <Button
            android:id="@+id/quit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="退       出" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/info_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/info_page_textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="用户名"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/info_page_editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/info_page_textNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="昵   称"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/info_page_editTextNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/info_page_textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="密   码"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/info_page_editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/change_info_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="更新信息" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_party_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1"
         android:visibility="gone">

        <TableLayout
            android:id="@+id/my_party_table"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="1,2"
            android:stretchColumns="0,1,2" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#000000"
                android:gravity="center"
                android:text="我的派对"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TableRow>

                <TextView
                    android:id="@+id/my_party_table_name_title"
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="派对名"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="地点"
                    android:textColor="#ffffff" />
            </TableRow>

        </TableLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/create_party_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/create_party_page_textParty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="派对名"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/create_party_page_editTextParty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/create_party_page_textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="时   间"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/create_party_page_editTextTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/create_party_page_textPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="地   点"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/create_party_page_editTextPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/create_party_page_create_party_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="创建派对" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/enter_party_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1" >

        <TableLayout
            android:id="@+id/enter_party_table"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="1,2"
            android:stretchColumns="0,1,2" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#000000"
                android:gravity="center"
                android:text="派对列表"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TableRow>

                <TextView
                    android:id="@+id/other_party_table_name_title"
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="派对名"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="地点"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="    "
                    android:textColor="#ffffff" />
            </TableRow>

            
        </TableLayout>
    </FrameLayout>

</RelativeLayout>